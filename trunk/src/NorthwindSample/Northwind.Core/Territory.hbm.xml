<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Northwind.Core" namespace="Northwind.Core">
	<class name="Territory" table="Territories">
		<!-- Evil assigned ID - use identity instead unless you're working with a legacy DB -->
		<id name="ID" column="TerritoryID">
			<generator class="assigned" />
		</id>

		<property name="Description" column="TerritoryDescription" />

		<many-to-one name="RegionBelongingTo" column="RegionID"
			class="Region" not-null="true" />

		<bag name="Employees" table="EmployeeTerritories" inverse="true">
			<key column="TerritoryID" />
			<many-to-many class="Employee" column="EmployeeID" />
		</bag>
	</class>
</hibernate-mapping>